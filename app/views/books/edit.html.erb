<main>
  <h1><strong>Editing Book</strong></h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>error occurred
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <p><%= f.submit 'Update Book' %></p>
</main>
<table>
  <tr>
  <td><%= link_to "Show", book_path(@book.id) %></td>
  <td>|</td>
  <td><%= link_to "Back", "/books" %></td>
  </tr>
</table>

<% end %>